<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="368dp"
    android:layout_height="495dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="509dp">


        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="46dp"
            android:text="Welcome to WikiSMS"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="13pt"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.122" />

        <TextView
            android:id="@+id/textSearch"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="162dp"
            android:text="Enter Wikipedia Search:"
            android:textColor="@android:color/holo_green_dark"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="245dp" />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="143dp"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_dark"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="245dp"/>


        <EditText
            android:id="@+id/editSearch"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textSearch"
            android:layout_alignBottom="@+id/textSearch"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="-1dp"
            android:layout_toEndOf="@+id/textSearch"
            android:layout_toRightOf="@+id/textSearch"
            android:ems="10"
            android:hint="type here..."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textHint"
            android:layout_width="98dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="263dp"
            android:text="@Any hint?"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="7pt"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="245dp" />


        <EditText
            android:id="@+id/editHint"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="206dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:hint="Enter hint here..."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editSearch"
            android:layout_alignRight="@+id/editSearch"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="190dp"
            android:onClick="ShowMessage()"
            android:text="SEARCH" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="62dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="189dp"
            android:onClick="ShowMessage()"
            android:text="RESET" />


    </RelativeLayout>


</LinearLayout>